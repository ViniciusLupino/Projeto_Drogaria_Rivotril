@model IEnumerable<ProjetoDrogas.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<h1>CATEGORIAS</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adicionar categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-primary">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
